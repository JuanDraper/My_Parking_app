<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/rectangle"
        android:layout_width="@dimen/mainactViewWidth"
        android:layout_height="@dimen/mainactViewHeight"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/progress_bar"
        android:layout_marginEnd="@dimen/progress_bar"
        android:background="#00000000"
        android:max="30"
        android:progress="12"
        app:layout_constraintBottom_toTopOf="@+id/busyParking"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="@dimen/recyclerViewWidth"
        android:layout_height="@dimen/recyclerViewHeight"
        android:layout_marginStart="@dimen/recyclerView"
        android:layout_marginEnd="@dimen/recyclerView"
        android:layout_marginBottom="@dimen/recyclerView2"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/busyParking"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/busyHeight"
        android:layout_marginStart="@dimen/busyMarginStart"
        android:text="@string/busy"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/rectangle"
        app:layout_constraintStart_toStartOf="@id/rectangle" />

    <TextView
        android:id="@+id/freeParking"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/freeHeight"
        android:layout_marginTop="@dimen/freeTop"
        android:layout_marginEnd="@dimen/freeEnd"
        android:text="@string/free"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        app:layout_constraintTop_toTopOf="@+id/rectangle" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/FABEnd"
        android:layout_marginBottom="@dimen/FABBottom"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:contentDescription="@string/addReservation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView"
        android:src="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
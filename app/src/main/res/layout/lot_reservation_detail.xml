<?xml version="1.0" encoding="utf-8"?>
   <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="182dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="2dp"
    android:background="@drawable/cardview_res"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/StartingDate"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/FinishDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/FinishDate" />

    <TextView
        android:id="@+id/text_month_year_start"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/StartingDate"
        app:layout_constraintTop_toBottomOf="@id/StartingDate" />

    <TextView
        android:id="@+id/StartingHour"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/StartingDate"
        app:layout_constraintTop_toBottomOf="@+id/text_month_year_start"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/FinishDate"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:text="TextView"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/StartingDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_month_year_end"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/FinishDate"
        app:layout_constraintTop_toBottomOf="@id/FinishDate" />

    <TextView
        android:id="@+id/FinishHOur"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/text_month_year_end"
        app:layout_constraintTop_toBottomOf="@+id/text_month_year_end" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/FinishDate" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>